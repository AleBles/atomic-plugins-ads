<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="com.ludei.ads.android.mopub.millennialmedia" version="1.0.0">
    <name>Ads Mopub</name>
    <description>Android MoPub MillennialMedia Adapter</description>
    <license>MPL 2.0</license>
    <keywords>cordova,ads</keywords>
    <platform name="android">
        
        <source-file src="src/deps/MMSDK.jar" target-dir="libs" framework="true" />
        <source-file src="src/deps/mopub-millenialmedia-adapter.jar" target-dir="libs" framework="true" />

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <activity
                android:name="com.millennialmedia.android.MMActivity"
                android:theme="@android:style/Theme.Translucent.NoTitleBar"
                android:configChanges="keyboardHidden|orientation|keyboard" />

            <activity android:name="com.millennialmedia.android.VideoPlayer" 
                android:configChanges="keyboardHidden|orientation|keyboard" />
        </config-file>
    </platform>

    <dependency id="com.ludei.ads.android.mopub" url="." subdir="src/cordova/android/mopub/base" />

</plugin>